<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
        </li>
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <% if(user) { %>
        <form method="POST" action="/logout">
          <div class="alight-items-center">
            <p class="navbar-text mb-0">Logged In As: <%= user.email %>! </p>
            <button class="btn btn-outline-light" type="submit">Logout</button>
          </div>
        </form>
        <% } else { %>
          <form method="POST" action="/login" class="form-inline">
            <input class="form-control mr-sm-2" name="user" placeholder="User Name">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Sign in</button>
          </form>
          <% } %>
    </div>
    </div>
  </nav>
